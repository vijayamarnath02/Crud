<!DOCTYPE html>
<html>
<head>
  <title>Form</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
  <style>
    body {
      background-color: lightgray;
      padding: 20px;
      font-family: Arial, sans-serif;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    th, td {
      padding: 10px;
      text-align: left;
      border-bottom: 1px solid #ccc;
    }

    th {
      background-color: #f2f2f2;
      font-weight: bold;
    }

    .text-center {
      text-align: center;
    }

    .align-middle {
      vertical-align: middle !important;
    }

    .alert-danger {
      margin-bottom: 20px;
    }

    .create-button {
      margin-top: 20px;
    }

    .btn-create {
      background-color: #007bff;
      color: #fff;
      border: none;
      padding: 10px 20px;
      text-transform: uppercase;
      cursor: pointer;
    }

    .btn-create:hover {
      background-color: #0056b3;
    }

    .btn-edit {
      background-color: #ffc107;
      color: #000;
      border: none;
      padding: 5px 10px;
      text-decoration: none;
    }

    .btn-remove {
      background-color: #dc3545;
      color: #fff;
      border: none;
      padding: 5px 10px;
      text-decoration: none;
    }
  </style>
</head>

<body>
  <h1 class="text-center">Details</h1>
  <% if(typeof message != "undefined" && message) { %>
    <div class="alert alert-danger" role="alert">
      <strong><%= message %></strong>
    </div>
  <% } %>
  <table>
    <thead>
      <tr>
        <th>S.No</th>
        <th>Name</th>
        <th>Phno</th>
        <th>Age</th>
        <th>DOB</th>
        <th>Email</th>
        <th>   Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (docs.length === 0) { %>
        <tr>
          <td colspan="7" class="text-center"><h3>No posts available.</h3></td>
        </tr>
      <% } else { %>
        <% let serialNumber = 1; %>
        <% docs.forEach(function(doc) { %>
          <tr>
            <td><%= serialNumber %></td>
            <td><%= doc.name %></td>
            <td><%= doc.phno %></td>
            <td><%= doc.age %></td>
            <td><%= doc.dob %></td>
            <td><%= doc.email %></td>
            <td class="text-center">
              <a class="btn-edit" href="/edit/<%= doc._id %>" method="get">Edit</a>
              <a class="btn-remove" href="/delete/<%= doc._id %>">Remove</a>
            </td>
          </tr>
          <% serialNumber++; %>
        <% }); %>
      <% } %>
    </tbody>
  </table>
  <div class="text-center">
    <form action="/create/new" method="post">
      <button class="btn btn-create create-button" type="submit" action="/create">Create</button>
    </form>
  </div>
</body>
</html>
